{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "lib/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false
    },
    "typecheck": {},
    "lint": {},
    "test": {
      "dependsOn": ["^build"]
    }
  },
  "globalDependencies": ["tsconfig.json"]
}
